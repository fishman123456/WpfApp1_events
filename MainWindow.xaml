<Window x:Class="WpfApp1_events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="222*"/>
                <ColumnDefinition Width="351*"/>
                <ColumnDefinition Width="227*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="89*"/>
                <RowDefinition Height="214*"/>
                <RowDefinition Height="131*"/>
            </Grid.RowDefinitions>
            <Button Name="Button1" Content="Button1" Grid.Row="2" Grid.Column="1" Click="Button_Click_1"   IsDefault="True"  />
            <Button Name="Button2" Content="Button2" Grid.Row="2" Grid.Column="2" Click="Button_Click_2"   />
        </Grid>
        <TextBox Name="TextBox1" TextWrapping="Wrap" Text="TextBox" Height="100" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" />
    </Grid>
</Window>
